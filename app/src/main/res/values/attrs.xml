<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EmojiFaceView">
        <attr name="faceColor" format="color" />
        <attr name="eyesColor" format="color" />
        <attr name="mouthColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="0" />
            <enum name="sad" value="1" />
        </attr>
        <attr name="type" format="enum">
            <enum name="button" value="0" />
            <enum name="image" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FanControlView">
        <attr name="fanOnColor" format="reference|color" />
        <attr name="fanOffColor" format="reference|color" />
    </declare-styleable>

</resources>